<div class="modal fade" id="conceptosModal" tabindex="-1" role="dialog" aria-labelledby="conceptosModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="conceptosModalLabel">Asignar Conceptos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="conceptosForm">
                    @foreach (var concepto in ViewBag.Conceptos as IEnumerable<SelectListItem>)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@concepto.Value" id="concepto_@concepto.Value" name="ConceptosSeleccionados" />
                            <label class="form-check-label" for="concepto_@concepto.Value">
                                @concepto.Text
                            </label>
                        </div>
                    }
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="submitConceptos()">Guardar Conceptos</button>
            </div>
        </div>
    </div>
</div>
