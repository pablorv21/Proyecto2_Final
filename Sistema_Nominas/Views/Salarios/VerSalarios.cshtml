@model IEnumerable<SalarioEmpleadoModel>
@{
    ViewData["Title"] = "Listado de Salarios de Empleados";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Salario ID</th>
                    <th>Empleado ID</th>
                    <th>Nombre del Empleado</th>
                    <th>Cédula</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Salario Base</th>
                    <th>Tipo de Salario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SalarioID</td>
                        <td>@item.EmpleadoID</td>
                        <td>@item.Nombre_Empleado</td>
                        <td>@item.cedula</td>
                        <td>@item.FechaInicio.ToString("yyyy-MM-dd")</td>
                        <td>@(item.FechaFin.HasValue ? item.FechaFin.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                        <td>@item.SalarioBase.ToString("C")</td>
                        <td>@item.TipoSalario</td>
                        <td>
                            <button class="btn btn-primary btn-sm btnAgregarDeduccion" data-salario-id="@item.SalarioID">
                                <i class="fas fa-plus-circle me-1"></i>Agregar Deducción
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table {
        font-size: 0.9rem;
    }

        .table th, .table td {
            vertical-align: middle;
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btnAgregarDeduccion").click(function () {
                var salarioId = $(this).data("salario-id");
                // Aquí puedes agregar la lógica para manejar el clic del botón
                alert("Agregar deducción para Salario ID: " + salarioId);
            });
        });
    </script>
}