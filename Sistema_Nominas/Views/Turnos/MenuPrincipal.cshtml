@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Nóminas - Administración de Empleados</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --background-color: #f8f9fc;
            --hover-color: #eaecf4;
            --text-color: #5a5c69;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .wrapper {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: var(--primary-color);
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            position: fixed;
            top: 0;
            left: 0;
        }

        .sidebar-brand {
            height: 4.375rem;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 800;
            padding: 1.5rem 1rem;
            text-align: center;
            letter-spacing: 0.05rem;
            color: white;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            border-radius: 0.35rem;
            margin: 0.2rem 1rem;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .sidebar-heading {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: rgba(255, 255, 255, 0.4);
            padding: 1rem;
        }

        .sidebar .submenu {
            padding-left: 1rem;
        }

        .sidebar .submenu .nav-link {
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
        }

        .main-menu-item i {
            margin-right: 0.5rem;
            font-size: 0.85rem;
        }

        .main-content {
            flex: 1;
            padding: 2rem;
            margin-left: 250px;
        }

        .page-title {
            color: var(--primary-color);
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .dashboard-card {
            background-color: #fff;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.2);
        }

        .dashboard-card h3 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .dashboard-card p {
            color: var(--secondary-color);
            margin-bottom: 0;
        }

        .dashboard-card i {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-laugh-wink"></i>
                <span>SisNóminas</span>
            </div>
            <div class="sidebar-sticky">
                <h6 class="sidebar-heading">Administración</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active main-menu-item" href="#"><i class="fas fa-home"></i>Menú Principal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-menu-item" href="#"><i class="fas fa-clock"></i>Administración Turnos</a>
                        <ul class="nav flex-column submenu">
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("ListadoTurnos", "Turnos")">Listar Los Turnos</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("CreacionTurnos","Turnos")">Crear Turno</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-menu-item" href="#"><i class="fas fa-calendar-alt"></i>Administración De Horarios</a>
                        <ul class="nav flex-column submenu">
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("NuevoHorario","Horarios")">Agregar Horario</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("VerHorarios","Horarios")">Actualizar Horario</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("AsignarHorario","Horarios")">Asignar horario</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("AsignarDiasLibres","DiasLibres")">Asignar días libres</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-menu-item" href="#"><i class="fas fa-user-clock"></i>Gestión de Jornadas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-menu-item" href="#"><i class="fas fa-chart-bar"></i>Reportes</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main role="main" class="main-content">
            <h1 class="page-title">Administración Horaria Laboral</h1>

            <div class="row">
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <i class="fas fa-users mb-3"></i>
                        <h3>Empleados Activos</h3>
                        <p>Total de empleados: 150</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <i class="fas fa-clock mb-3"></i>
                        <h3>Turnos Actuales</h3>
                        <p>Turnos activos: 5</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card text-center">
                        <i class="fas fa-calendar-check mb-3"></i>
                        <h3>Asignaciones Pendientes</h3>
                        <p>Horarios por asignar: 10</p>
                    </div>
                </div>
            </div>

            <!-- Aquí puedes agregar más contenido para el dashboard -->
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.nav-link').on('click', function () {
                $('.nav-link').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
</body>
</html>