@model Sistema_Nominas.Models.EmpleadoViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Nóminas - Información del Empleado</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding-top: 20px;
        }

        .main-content {
            padding: 20px;
        }

        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Administración</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("ActualizarRole","Empleados",new { empId =@Model.Empleado.EmpleadoID} )">
                                Role
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AnadirPermisos","PermisosEmpleado",new { EmpleadoID =@Model.Empleado.EmpleadoID })">
                                Añadir Permisos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#reportes">
                                Reportes
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Información del Empleado</h1>
                </div>

                <div id="empleado-info">
                    <form asp-action="ActualizarEmpleado" asp-controller="Empleados" method="post">
                        <input type="hidden" asp-for="Empleado.EmpleadoID" />

                        <div class="container">
                            <div class="main-body">
                                <div class="row gutters-sm">
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="d-flex flex-column align-items-center text-center">
                                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                                    <div class="mt-3">
                                                        <h4>@Model.Empleado.Nombre</h4>
                                                        <p class="text-secondary mb-1"></p>
                                                        <p class="text-muted font-size-sm">@Model.Empleado.NombreRole</p>
                                                        <button class="btn btn-primary">Follow</button>
                                                        <button class="btn btn-outline-primary">Message</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Nombre Completo</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Model.Empleado.Nombre @Model.Empleado.Apellido
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Correo Electrónico</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Model.Empleado.CorreoElectronico
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Teléfono</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Model.Empleado.Telefono
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Dirección</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Model.Empleado.Direccion
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <a class="btn btn-info " target="__blank" href="#">Editar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row gutters-sm">
                                            <div class="col-sm-12 mb-3">
                                                <div class="card h-100">
                                                    <div class="card-body">
                                                        <h6 class="d-flex align-items-center mb-3">Historial de Roles</h6>
                                                        <ul class="list-group">
                                                            @foreach (var role in Model.HistorialRoles)
                                                            {
                                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                                    <span>@role.nombreRole</span>
                                                                    <span>
                                                                        @role.FechaInicio.ToShortDateString() -
                                                                        @(role.FechaFin.HasValue ? role.FechaFin.Value.ToShortDateString() : "Presente")
                                                                    </span>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
