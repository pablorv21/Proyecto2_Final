@{
    ViewData["Title"] = "Gestión de Desempeño - Menú Principal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .menu-item {
            transition: transform 0.3s;
        }
        .menu-item:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-5">Gestión de Desempeño</h1>

        <div class="row">
            <!-- Evaluaciones de Desempeño -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Evaluaciones de Desempeño</h5>
                        <p class="card-text">Crear y gestionar evaluaciones de desempeño</p>
                        <a href="@Url.Action("Nuevo", "Desempeno")" class="btn btn-primary">Acceder</a>
                    </div>
                </div>
            </div>

            <!-- Objetivos y Metas -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-bullseye fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">Objetivos y Metas</h5>
                        <p class="card-text">Establecer y seguir objetivos de empleados</p>
                        <a href="@Url.Action("ObservarEvalaciones", "Desempeno")" class="btn btn-success">Acceder</a>
                    </div>
                </div>
            </div>

            <!-- Feedback Continuo -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-comments fa-3x mb-3 text-info"></i>
                        <h5 class="card-title">Feedback Continuo</h5>
                        <p class="card-text">Proporcionar y recibir feedback regularmente</p>
                        <a href="#" class="btn btn-info">Acceder</a>
                    </div>
                </div>
            </div>

            <!-- Planes de Desarrollo -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-road fa-3x mb-3 text-warning"></i>
                        <h5 class="card-title">Planes de Desarrollo</h5>
                        <p class="card-text">Crear y seguir planes de desarrollo personal</p>
                        <a href="#" class="btn btn-warning">Acceder</a>
                    </div>
                </div>
            </div>

            <!-- Reportes y Analíticas -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x mb-3 text-danger"></i>
                        <h5 class="card-title">Reportes y Analíticas</h5>
                        <p class="card-text">Generar informes y análisis de desempeño</p>
                        <a href="#" class="btn btn-danger">Acceder</a>
                    </div>
                </div>
            </div>

            <!-- Configuración -->
            <div class="col-md-4 mb-4">
                <div class="card menu-item">
                    <div class="card-body text-center">
                        <i class="fas fa-cogs fa-3x mb-3 text-secondary"></i>
                        <h5 class="card-title">Configuración</h5>
                        <p class="card-text">Ajustar parámetros del sistema de desempeño</p>
                        <a href="#" class="btn btn-secondary">Acceder</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>